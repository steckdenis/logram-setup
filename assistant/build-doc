#Explorer chaque langue, et chaque fichier dans cette langue
langs=`ls src`

for lang in "$langs"
do
	echo ">> Generating documentation in $lang"

	#Cr√©er le projet de cette langue
	mkdir -p html/$lang
	(cd src/$lang/src && doc2html project.xml ../../../html/$lang)

	#Copier le squelette HTML pour cette langue
	cp html/logram-doc.css "html/$lang"
	cp -r html/img "html/$lang"
	
	#Copier les images de la langue
	cp -rf src/$lang/img/* "html/$lang/img"
done
