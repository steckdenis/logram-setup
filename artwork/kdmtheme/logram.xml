<greeter id="theme">
	<style font="Sans 11" window-text-color="#000022"
	       base-color="#ffffff" alternate-base-color="#aaaaff"
	       text-color="#000000" disabled-text-color="#808080"/>
           
	<item type="pixmap" id="background" background="true">
		<normal file="background.png"/>
		<pos anchor="c" x="50%" y="50%" width="100%" height="100%"/>
	</item>

    <item type="rect" id="total">
        <pos anchor="c" x="50%" y="50%" width="100%" height="100%" />
        
        <fixed>  
            <item type="list" id="userlist">
                <pos max-height="80%" anchor="c" width="39%" x="25%" y="50%" />
                <color labelcolor="#80ffffff" altlabelcolor="#80f0f0f0"/>
            </item>
            
            <item type="pixmap" id="line">
                <normal file="line.png" />
                <pos width="2" height="100%" anchor="c" x="50%" y="50%"/>
            </item>
            
            <item type="rect" id="talker">
                <pos height="box" anchor="c" x="75%" y="50%" width="49%" />
                
                <box orientation="vertical" xpadding="2" ypadding="2" spacing="4">
                    <item type="label" id="welcome">
                        <pos anchor="c" x="50%" />
                        <normal color="#000088" font="Sans 16"/>
                        <stock type="welcome-label"/>
                    </item>
                    <item type="label">
                        <pos x="5" />
                        <stock type="username-label"/>
                    </item>
                    <item type="entry" id="user-entry">
                        <pos width="150" height="22"/>
                    </item>
                    <item type="label">
                        <pos x="5" />
                        <stock type="password-label"/>
                    </item>
                    <item type="entry" id="pw-entry">
                        <pos width="150" height="22" />
                    </item>
                </box>
            </item>
            
        </fixed>
    </item>
    
    <item type="rect" id="bar">
        <pos width="100%" height="35" x="0" y="-35" anchor="nw" />
        
        <fixed>
            <item type="pixmap">
                <normal file="bar.png" />
                <pos width="1980" height="35" />
            </item>
        </fixed>
            
        <box orientation="horizontal" xpadding="5" ypadding="5" spacing="10" homogeneous="false">
            <item type="rect" id="session_button" button="true">
                <pos y="50%" anchor="w" width="box" height="box"/>
                
                <box orientation="horizontal" spacing="10" xpadding="10">
                    <item type="pixmap">
                        <normal file="session.png" tint="#ffffff"/>
                        <prelight file="session.png"/>
                        <active file="session.png" tint="#ffffff"/>
                        <pos y="50%" anchor="w"/>
                    </item>
                    <item type="label">
                        <normal color="#000000" font="Sans 10"/>
                        <prelight color="#333333" font="Sans 10"/>
                        <active color="#555555" font="Sans 10"/>
                        <pos y="50%" anchor="w"/>
                        <stock type="session"/>
                    </item>
                </box>
            </item>
            <item type="rect" id="system_button" button="true">
                <show modes="console" type="system"/>
                <pos y="50%" anchor="w" width="box" height="box"/>
                <box orientation="horizontal" spacing="10" xpadding="10">
                    <item type="pixmap">
                        <normal file="system.png" tint="#ffffff"/>
                        <prelight file="system.png"/>
                        <active file="system.png" tint="#ffffff"/>
                        <pos y="50%" anchor="w"/>
                    </item>
                    <item type="label">
                        <normal color="#000000" font="Sans 10"/>
                        <prelight color="#333333" font="Sans 10"/>
                        <active color="#555555" font="Sans 10"/>
                        <pos y="50%" anchor="w"/>
                        <stock type="system"/>
                    </item>
                </box>
            </item>
            
            <item type="rect" id="spacer2">
                <pos expand="true"/>
            </item>
            
            <item type="rect" id="pam-error-placeholder">
                <pos width="box" height="box"/>
                <box orientation="horizontal">
                    <item type="label" id="pam-error">
                        <pos anchor="c" y="50%" />
                        <normal color="#FF8800" font="Sans Bold 10"/>
                        <text />
                    </item>
                </box>
            </item>
            <item type="label" id="caps-lock-warning">
                <normal color="#FF8800" font="Sans 10"/>
                <pos anchor="c" y="50%"/>
                <stock type="caps-lock-warning"/>
            </item>
            
            <item type="rect" id="spacer2">
                <pos expand="true"/>
            </item>
            
            <item type="label" id="clock">
                <pos anchor="w" y="50%"/>
                <normal font="Sans 10" color="#222222"/>
                <text>%c</text>
            </item>
        </box>
    </item>
</greeter>
